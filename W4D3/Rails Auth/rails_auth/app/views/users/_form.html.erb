<%= action = (user.persisted? ? user_url(user) : users_url ) %>
<%= method = (user.persisted? ? "patch" : "post" ) %>
<%= message = (user.persisted? ? "Update user" : "Create user") %>

<form action="%= action %>" method="post">
  <input type="hidden" name="method" value="<%= method %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="user_username">Username</label>
  <input id="user_username" type="text" name="user[username]" value="">
<br/>
  <label for="user_password">Password</label>
  <input id="user_password" type="text" name="user[password]" value="">
<br>

  <input type="submit" name="" value="<% message %>">
</form>
